<?xml version="1.0" encoding="UTF-8"?>
<!--
    InstallBuilder Variables Configuration File

    This file contains all the variables used in the installer-template.xml
    Modify these values according to your application requirements.

    To build the installer, use:
    builder build installer-template.xml --setvars variables.xml
-->
<variables>
    <!-- ========================================= -->
    <!-- PROJECT INFORMATION                       -->
    <!-- ========================================= -->

    <!-- Short name for the project (no spaces recommended) -->
    <PROJECT_SHORT_NAME>MyApp</PROJECT_SHORT_NAME>

    <!-- Full display name of the application -->
    <PROJECT_FULL_NAME>My Application Name</PROJECT_FULL_NAME>

    <!-- Version number (e.g., 1.0.0, 2.3.1) -->
    <PROJECT_VERSION>1.0.0</PROJECT_VERSION>

    <!-- Brief summary of the application -->
    <PROJECT_SUMMARY>A brief summary of your application</PROJECT_SUMMARY>

    <!-- Detailed description -->
    <PROJECT_DESCRIPTION>A detailed description of what your application does and its key features.</PROJECT_DESCRIPTION>

    <!-- ========================================= -->
    <!-- VENDOR INFORMATION                        -->
    <!-- ========================================= -->

    <!-- Company or vendor name -->
    <VENDOR_NAME>Your Company Name</VENDOR_NAME>

    <!-- ========================================= -->
    <!-- INSTALLER OUTPUT SETTINGS                 -->
    <!-- ========================================= -->

    <!-- Base filename for the installer (platform suffix will be added automatically) -->
    <INSTALLER_FILENAME>myapp-installer-${PROJECT_VERSION}</INSTALLER_FILENAME>

    <!-- Platforms to build for: "windows linux linux-x64" or "all" -->
    <ENABLED_PLATFORMS>windows linux linux-x64</ENABLED_PLATFORMS>

    <!-- ========================================= -->
    <!-- INSTALLATION DIRECTORIES                  -->
    <!-- ========================================= -->

    <!-- Default installation directory
         Options:
         1. Simple (recommended for most): ${platform_install_prefix}/${PROJECT_SHORT_NAME}
            Windows: C:\Program Files\MyApp
            Linux: /opt/MyApp or /usr/local/MyApp

         2. With Vendor folder: ${platform_install_prefix}/${VENDOR_NAME}/${PROJECT_SHORT_NAME}
            Windows: C:\Program Files\YourCompany\MyApp
            Linux: /opt/YourCompany/MyApp

         3. With Version: ${platform_install_prefix}/${VENDOR_NAME}/${PROJECT_SHORT_NAME}/${PROJECT_VERSION}
            Windows: C:\Program Files\YourCompany\MyApp\1.0.0
            Linux: /opt/YourCompany/MyApp/1.0.0

         4. Custom path: C:\MyApps\${PROJECT_SHORT_NAME} or /usr/local/${PROJECT_SHORT_NAME}
    -->
    <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${VENDOR_NAME}/${PROJECT_SHORT_NAME}/${PROJECT_VERSION}</DEFAULT_INSTALL_DIR>

    <!-- ========================================= -->
    <!-- SOURCE FILE LOCATIONS                     -->
    <!-- ========================================= -->

    <!-- Base directory containing your application files -->
    <SOURCE_DIR>${project_directory}/dist</SOURCE_DIR>

    <!-- Platform-specific subdirectory (if using platform-neutral structure) -->
    <PLATFORM_SPECIFIC_DIR>common</PLATFORM_SPECIFIC_DIR>

    <!-- Documentation directory -->
    <DOCS_DIR>${project_directory}/docs</DOCS_DIR>

    <!-- ========================================= -->
    <!-- LICENSE AND README FILES                  -->
    <!-- ========================================= -->

    <!-- Path to license file (txt or rtf format) -->
    <LICENSE_FILE>${project_directory}/LICENSE.txt</LICENSE_FILE>

    <!-- Path to readme file -->
    <README_FILE>${project_directory}/README.txt</README_FILE>

    <!-- ========================================= -->
    <!-- EXECUTABLE AND ICON FILES                 -->
    <!-- ========================================= -->

    <!-- Windows executable name (e.g., myapp.exe) -->
    <WINDOWS_EXECUTABLE>myapp.exe</WINDOWS_EXECUTABLE>

    <!-- Windows icon file (relative to installdir) -->
    <WINDOWS_ICON>myapp.ico</WINDOWS_ICON>

    <!-- Linux executable name (e.g., myapp or myapp.sh) -->
    <LINUX_EXECUTABLE>myapp</LINUX_EXECUTABLE>

    <!-- Linux icon file (relative to installdir) -->
    <LINUX_ICON>myapp.png</LINUX_ICON>

    <!-- ========================================= -->
    <!-- COMPONENT DESCRIPTIONS                    -->
    <!-- ========================================= -->

    <!-- Description for main component -->
    <MAIN_COMPONENT_DESCRIPTION>Main application files (required)</MAIN_COMPONENT_DESCRIPTION>

    <!-- Description for documentation component -->
    <DOCS_COMPONENT_DESCRIPTION>Documentation and user guides (optional)</DOCS_COMPONENT_DESCRIPTION>

    <!-- ========================================= -->
    <!-- WINDOWS REGISTRY SETTINGS                 -->
    <!-- ========================================= -->

    <!-- Registry key path for Windows installation info -->
    <REGISTRY_KEY>HKEY_LOCAL_MACHINE\Software\${VENDOR_NAME}\${PROJECT_SHORT_NAME}</REGISTRY_KEY>

    <!-- ========================================= -->
    <!-- PATH ENVIRONMENT VARIABLE                 -->
    <!-- ========================================= -->

    <!-- Add to PATH by default? (1 = yes, 0 = no) -->
    <ADD_TO_PATH_DEFAULT>1</ADD_TO_PATH_DEFAULT>

    <!-- Position to add to PATH: "beginning" or "end" -->
    <ADD_TO_PATH_POSITION>end</ADD_TO_PATH_POSITION>

    <!-- ========================================= -->
    <!-- DESKTOP SHORTCUT SETTINGS                 -->
    <!-- ========================================= -->

    <!-- Create desktop shortcut by default? (1 = yes, 0 = no) -->
    <CREATE_DESKTOP_SHORTCUT_DEFAULT>1</CREATE_DESKTOP_SHORTCUT_DEFAULT>

    <!-- ========================================= -->
    <!-- UNINSTALLER SETTINGS                      -->
    <!-- ========================================= -->

    <!-- Uninstaller executable name (Windows) -->
    <UNINSTALLER_NAME>uninstall-${PROJECT_SHORT_NAME}</UNINSTALLER_NAME>

    <!-- ========================================= -->
    <!-- SPLASH SCREEN SETTINGS                    -->
    <!-- ========================================= -->

    <!-- Path to splash screen image (PNG, JPG, or BMP format)
         Recommended size: 500x300 pixels or similar -->
    <SPLASH_IMAGE>${project_directory}/splash.png</SPLASH_IMAGE>

    <!-- ========================================= -->
    <!-- PRIVACY NOTICE FILE                       -->
    <!-- ========================================= -->

    <!-- Path to privacy notice file (txt or rtf format) -->
    <PRIVACY_NOTICE_FILE>${project_directory}/PRIVACY_NOTICE.txt</PRIVACY_NOTICE_FILE>

    <!-- ========================================= -->
    <!-- SHORTCUTS SETTINGS                        -->
    <!-- ========================================= -->

    <!-- Windows Start Menu folder name -->
    <WINDOWS_START_MENU_FOLDER>${VENDOR_NAME}\${PROJECT_SHORT_NAME}</WINDOWS_START_MENU_FOLDER>

    <!-- Create desktop shortcuts by default? (1 = yes, 0 = no) -->
    <CREATE_DESKTOP_SHORTCUTS>1</CREATE_DESKTOP_SHORTCUTS>

    <!-- Create Start Menu shortcuts by default? (1 = yes, 0 = no) -->
    <CREATE_START_MENU_SHORTCUTS>1</CREATE_START_MENU_SHORTCUTS>

    <!-- Install Linux aliases by default? (1 = yes, 0 = no) -->
    <INSTALL_LINUX_ALIASES>1</INSTALL_LINUX_ALIASES>

    <!-- Linux alias file location -->
    <LINUX_ALIAS_FILE>~/.bash_aliases</LINUX_ALIAS_FILE>

</variables>
