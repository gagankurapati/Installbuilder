<?xml version="1.0" encoding="UTF-8"?>
<!-- InstallBuilder Variables Configuration -->
<variables>

    <!-- PROJECT INFORMATION -->
    <PROJECT_SHORT_NAME>MyApp</PROJECT_SHORT_NAME>
    <PROJECT_FULL_NAME>My Application Name</PROJECT_FULL_NAME>
    <PROJECT_VERSION>1.0.0</PROJECT_VERSION>
    <VENDOR_NAME>Your Company Name</VENDOR_NAME>
    <PROJECT_SUMMARY>A brief summary of your application</PROJECT_SUMMARY>
    <PROJECT_DESCRIPTION>A detailed description of what your application does and its key features.</PROJECT_DESCRIPTION>

    <!-- EXECUTABLES -->
    <WINDOWS_EXECUTABLE>myapp.exe</WINDOWS_EXECUTABLE>
    <WINDOWS_ICON>myapp.ico</WINDOWS_ICON>
    <LINUX_EXECUTABLE>myapp</LINUX_EXECUTABLE>
    <LINUX_ICON>myapp.png</LINUX_ICON>

    <!-- SOURCE FILE LOCATIONS -->
    <SOURCE_DIR>${project_directory}/dist</SOURCE_DIR>
    <PLATFORM_SPECIFIC_DIR>common</PLATFORM_SPECIFIC_DIR>
    <DOCS_DIR>${project_directory}/docs</DOCS_DIR>

    <!-- EXTERNAL COMPONENT AND SHORTCUT FILES -->
    <COMPONENTS_FILE>${project_directory}/products/my-product/components.xml</COMPONENTS_FILE>
    <SHORTCUTS_FILE>${project_directory}/products/my-product/shortcuts.xml</SHORTCUTS_FILE>

    <!-- LICENSE AND LEGAL FILES -->
    <LICENSE_FILE>${project_directory}/LICENSE.txt</LICENSE_FILE>
    <PRIVACY_NOTICE_FILE>${project_directory}/PRIVACY_NOTICE.txt</PRIVACY_NOTICE_FILE>
    <SPLASH_IMAGE>${project_directory}/splash.png</SPLASH_IMAGE>
    <README_FILE>${project_directory}/README.txt</README_FILE>

    <!-- INSTALLATION DIRECTORY -->
    <!-- Pattern 1: Simple -->
    <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${PROJECT_SHORT_NAME}</DEFAULT_INSTALL_DIR>
    <!-- Pattern 2: With vendor folder -->
    <!-- <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${VENDOR_NAME}/${PROJECT_SHORT_NAME}</DEFAULT_INSTALL_DIR> -->
    <!-- Pattern 3: With version -->
    <!-- <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${VENDOR_NAME}/${PROJECT_SHORT_NAME}/${PROJECT_VERSION}</DEFAULT_INSTALL_DIR> -->

    <!-- INSTALLER OUTPUT -->
    <INSTALLER_FILENAME>myapp-installer-${PROJECT_VERSION}</INSTALLER_FILENAME>
    <ENABLED_PLATFORMS>windows linux-x64</ENABLED_PLATFORMS>

    <!-- WINDOWS SHORTCUTS -->
    <WINDOWS_START_MENU_FOLDER>${VENDOR_NAME}\${PROJECT_SHORT_NAME}</WINDOWS_START_MENU_FOLDER>
    <CREATE_DESKTOP_SHORTCUTS>1</CREATE_DESKTOP_SHORTCUTS>
    <CREATE_START_MENU_SHORTCUTS>1</CREATE_START_MENU_SHORTCUTS>

    <!-- LINUX INTEGRATION -->
    <INSTALL_LINUX_ALIASES>1</INSTALL_LINUX_ALIASES>
    <LINUX_ALIAS_FILE>~/.bash_aliases</LINUX_ALIAS_FILE>

    <!-- COMPONENT DESCRIPTIONS -->
    <MAIN_COMPONENT_DESCRIPTION>Main application files (required)</MAIN_COMPONENT_DESCRIPTION>
    <DOCS_COMPONENT_DESCRIPTION>Documentation and user guides (optional)</DOCS_COMPONENT_DESCRIPTION>

    <!-- WINDOWS REGISTRY -->
    <REGISTRY_KEY>HKEY_LOCAL_MACHINE\Software\${VENDOR_NAME}\${PROJECT_SHORT_NAME}</REGISTRY_KEY>

    <!-- WINDOWS PATH -->
    <ADD_TO_PATH_DEFAULT>1</ADD_TO_PATH_DEFAULT>
    <ADD_TO_PATH_POSITION>end</ADD_TO_PATH_POSITION>

    <!-- UNINSTALLER -->
    <UNINSTALLER_NAME>uninstall-${PROJECT_SHORT_NAME}</UNINSTALLER_NAME>

</variables>
