<?xml version="1.0" encoding="UTF-8"?>
<!-- InstallBuilder Variables Configuration -->
<variables>

    <!-- PRODUCT INFORMATION -->
    <PRODUCT_SHORT_NAME>MyApp</PRODUCT_SHORT_NAME> <!-- TODO: Change to your app short name (no spaces, e.g., "ADMORE", "MyApp") -->
    <PRODUCT_NAME>My Application Name</PRODUCT_NAME> <!-- TODO: Change to your app full display name (e.g., "ADMORE 2024") -->
    <PRODUCT_VERSION>1.0.0</PRODUCT_VERSION> <!-- TODO: Change to your version (e.g., "1.0.0", "2024.0") -->
    <VENDOR_NAME>Your Company Name</VENDOR_NAME> <!-- TODO: Change to your company name (e.g., "Keysight Technologies") -->
    <PRODUCT_DESCRIPTION>A detailed description of what your application does and its key features.</PRODUCT_DESCRIPTION> <!-- TODO: Change to your app description -->

    <!-- SOURCE FILE LOCATIONS -->
    <SOURCE_DIR>${project_directory}/dist</SOURCE_DIR> <!-- TODO: Change to your build output directory path -->
    <PLATFORM_SPECIFIC_DIR>common</PLATFORM_SPECIFIC_DIR> <!-- TODO: Optional: subfolder name for platform files -->
    <DOCS_DIR>${project_directory}/docs</DOCS_DIR> <!-- TODO: Optional: Change to your documentation directory path -->

    <!-- EXTERNAL COMPONENT AND SHORTCUT FILES -->
    <COMPONENTS_FILE>${project_directory}/products/my-product/components.xml</COMPONENTS_FILE> <!-- TODO: Change "my-product" to your product folder name -->
    <SHORTCUTS_FILE>${project_directory}/products/my-product/shortcuts.xml</SHORTCUTS_FILE> <!-- TODO: Change "my-product" to your product folder name -->

    <!-- LICENSE AND LEGAL FILES -->
    <LICENSE_FILE>${project_directory}/LICENSE.txt</LICENSE_FILE> <!-- TODO: Change to your LICENSE.txt file path -->
    <PRIVACY_NOTICE_FILE>${project_directory}/PRIVACY_NOTICE.txt</PRIVACY_NOTICE_FILE> <!-- TODO: Optional: Change to your privacy notice file path (or remove) -->
    <SPLASH_IMAGE>${project_directory}/splash.png</SPLASH_IMAGE> <!-- TODO: Optional: Change to your splash screen image path (or remove) -->
    <README_FILE>${project_directory}/README.txt</README_FILE> <!-- TODO: Optional: Change to your README.txt file path (or remove) -->

    <!-- INSTALLATION DIRECTORY -->
    <!-- Pattern 1: Simple -->
    <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${PRODUCT_SHORT_NAME}</DEFAULT_INSTALL_DIR>
    <!-- Pattern 2: With vendor folder -->
    <!-- <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${VENDOR_NAME}/${PRODUCT_SHORT_NAME}</DEFAULT_INSTALL_DIR> -->
    <!-- Pattern 3: With version -->
    <!-- <DEFAULT_INSTALL_DIR>${platform_install_prefix}/${VENDOR_NAME}/${PRODUCT_SHORT_NAME}/${PRODUCT_VERSION}</DEFAULT_INSTALL_DIR> -->

    <!-- INSTALLER OUTPUT -->
    <INSTALLER_FILENAME>myapp-installer-${PRODUCT_VERSION}</INSTALLER_FILENAME> <!-- TODO: Change "myapp" to your desired installer filename prefix -->
    <ENABLED_PLATFORMS>windows linux-x64</ENABLED_PLATFORMS> <!-- TODO: Change to platforms you need: "windows", "linux-x64", or "windows linux-x64" -->

    <!-- COMPONENT DESCRIPTIONS -->
    <MAIN_COMPONENT_DESCRIPTION>Main application files (required)</MAIN_COMPONENT_DESCRIPTION>
    <DOCS_COMPONENT_DESCRIPTION>Documentation and user guides (optional)</DOCS_COMPONENT_DESCRIPTION>

    <!-- UNINSTALLER -->
    <UNINSTALLER_NAME>uninstall-${PRODUCT_SHORT_NAME}</UNINSTALLER_NAME>

    <!-- ============================================================================ -->
    <!-- =                    WINDOWS-SPECIFIC VARIABLES                            = -->
    <!-- ============================================================================ -->

    <!-- Windows Executables -->
    <WINDOWS_EXECUTABLE>myapp.exe</WINDOWS_EXECUTABLE> <!-- TODO: Change to your Windows .exe filename -->
    <WINDOWS_ICON>myapp.ico</WINDOWS_ICON> <!-- TODO: Change to your Windows .ico icon filename -->

    <!-- Windows Shortcuts -->
    <WINDOWS_START_MENU_FOLDER>${VENDOR_NAME}\${PRODUCT_SHORT_NAME}</WINDOWS_START_MENU_FOLDER>
    <CREATE_DESKTOP_SHORTCUTS>1</CREATE_DESKTOP_SHORTCUTS>
    <CREATE_START_MENU_SHORTCUTS>1</CREATE_START_MENU_SHORTCUTS>

    <!-- Windows Registry -->
    <REGISTRY_KEY>HKEY_LOCAL_MACHINE\Software\${VENDOR_NAME}\${PRODUCT_SHORT_NAME}</REGISTRY_KEY>

    <!-- Windows PATH -->
    <ADD_TO_PATH_DEFAULT>1</ADD_TO_PATH_DEFAULT>
    <ADD_TO_PATH_POSITION>end</ADD_TO_PATH_POSITION>

    <!-- ============================================================================ -->
    <!-- =                     LINUX-SPECIFIC VARIABLES                             = -->
    <!-- ============================================================================ -->

    <!-- Linux Executables -->
    <LINUX_EXECUTABLE>myapp</LINUX_EXECUTABLE> <!-- TODO: Change to your Linux executable filename -->
    <LINUX_ICON>myapp.png</LINUX_ICON> <!-- TODO: Change to your Linux .png icon filename -->

    <!-- Linux Integration -->
    <INSTALL_LINUX_ALIASES>1</INSTALL_LINUX_ALIASES>
    <LINUX_ALIAS_FILE>~/.bash_aliases</LINUX_ALIAS_FILE>

</variables>
