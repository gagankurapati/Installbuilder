<?xml version="1.0" encoding="UTF-8"?>
<!--
    InstallBuilder Shortcuts Configuration File

    This file contains all the shortcuts/aliases configuration
    for Windows and Linux platforms.

    Windows: Creates Start Menu and Desktop shortcuts
    Linux: Creates desktop entries and shell aliases
-->
<shortcuts>
    <!-- ========================================= -->
    <!-- WINDOWS SHORTCUT SETTINGS                 -->
    <!-- ========================================= -->

    <!-- Folder name in Start Menu (e.g., "MyCompany\MyProduct") -->
    <WINDOWS_START_MENU_FOLDER>${VENDOR_NAME}\${PROJECT_FULL_NAME}</WINDOWS_START_MENU_FOLDER>

    <!-- Windows Shortcuts List -->
    <windowsShortcuts>
        <!-- Main Application Shortcut -->
        <shortcut>
            <name>${PROJECT_SHORT_NAME}</name>
            <description>Launch ${PROJECT_FULL_NAME}</description>
            <executable>${installdir}/${WINDOWS_EXECUTABLE}</executable>
            <icon>${installdir}/${WINDOWS_ICON}</icon>
            <workingDirectory>${installdir}</workingDirectory>
            <arguments></arguments>
            <runInTerminal>0</runInTerminal>
            <createInStartMenu>1</createInStartMenu>
            <createOnDesktop>1</createOnDesktop>
        </shortcut>

        <!-- Documentation Shortcut -->
        <shortcut>
            <name>${PROJECT_SHORT_NAME} Documentation</name>
            <description>View ${PROJECT_FULL_NAME} Documentation</description>
            <executable>${installdir}/docs/index.html</executable>
            <icon>${installdir}/${WINDOWS_ICON}</icon>
            <workingDirectory>${installdir}/docs</workingDirectory>
            <arguments></arguments>
            <runInTerminal>0</runInTerminal>
            <createInStartMenu>1</createInStartMenu>
            <createOnDesktop>0</createOnDesktop>
        </shortcut>

        <!-- Uninstaller Shortcut -->
        <shortcut>
            <name>Uninstall ${PROJECT_SHORT_NAME}</name>
            <description>Uninstall ${PROJECT_FULL_NAME}</description>
            <executable>${installdir}/${UNINSTALLER_NAME}.exe</executable>
            <icon>${installdir}/${WINDOWS_ICON}</icon>
            <workingDirectory>${installdir}</workingDirectory>
            <arguments></arguments>
            <runInTerminal>0</runInTerminal>
            <createInStartMenu>1</createInStartMenu>
            <createOnDesktop>0</createOnDesktop>
        </shortcut>

        <!-- Configuration Tool Shortcut (Example) -->
        <shortcut>
            <name>${PROJECT_SHORT_NAME} Settings</name>
            <description>Configure ${PROJECT_FULL_NAME} Settings</description>
            <executable>${installdir}/${WINDOWS_EXECUTABLE}</executable>
            <icon>${installdir}/${WINDOWS_ICON}</icon>
            <workingDirectory>${installdir}</workingDirectory>
            <arguments>--settings</arguments>
            <runInTerminal>0</runInTerminal>
            <createInStartMenu>1</createInStartMenu>
            <createOnDesktop>0</createOnDesktop>
        </shortcut>
    </windowsShortcuts>

    <!-- ========================================= -->
    <!-- LINUX DESKTOP ENTRIES                     -->
    <!-- ========================================= -->

    <!-- Linux Desktop Shortcuts (freedesktop.org standard) -->
    <linuxDesktopEntries>
        <!-- Main Application Desktop Entry -->
        <desktopEntry>
            <name>${PROJECT_SHORT_NAME}</name>
            <genericName>${PROJECT_FULL_NAME}</genericName>
            <comment>Launch ${PROJECT_FULL_NAME}</comment>
            <executable>${installdir}/${LINUX_EXECUTABLE}</executable>
            <icon>${installdir}/${LINUX_ICON}</icon>
            <categories>Application;Utility;</categories>
            <terminal>false</terminal>
            <createDesktopFile>1</createDesktopFile>
        </desktopEntry>

        <!-- Documentation Desktop Entry -->
        <desktopEntry>
            <name>${PROJECT_SHORT_NAME} Documentation</name>
            <genericName>${PROJECT_FULL_NAME} Documentation</genericName>
            <comment>View ${PROJECT_FULL_NAME} Documentation</comment>
            <executable>xdg-open</executable>
            <icon>${installdir}/${LINUX_ICON}</icon>
            <arguments>${installdir}/docs/index.html</arguments>
            <categories>Application;Documentation;</categories>
            <terminal>false</terminal>
            <createDesktopFile>1</createDesktopFile>
        </desktopEntry>
    </linuxDesktopEntries>

    <!-- ========================================= -->
    <!-- LINUX SHELL ALIASES                       -->
    <!-- ========================================= -->

    <!-- Shell aliases to be added to ~/.bashrc or ~/.bash_aliases -->
    <linuxAliases>
        <!-- Main application alias -->
        <alias>
            <name>${PROJECT_SHORT_NAME}</name>
            <command>${installdir}/${LINUX_EXECUTABLE}</command>
            <description>Launch ${PROJECT_FULL_NAME}</description>
        </alias>

        <!-- Application with specific arguments -->
        <alias>
            <name>${PROJECT_SHORT_NAME}-help</name>
            <command>${installdir}/${LINUX_EXECUTABLE} --help</command>
            <description>Show ${PROJECT_FULL_NAME} help</description>
        </alias>

        <!-- Application settings -->
        <alias>
            <name>${PROJECT_SHORT_NAME}-config</name>
            <command>${installdir}/${LINUX_EXECUTABLE} --settings</command>
            <description>Configure ${PROJECT_FULL_NAME}</description>
        </alias>

        <!-- Navigate to installation directory -->
        <alias>
            <name>cd-${PROJECT_SHORT_NAME}</name>
            <command>cd ${installdir}</command>
            <description>Navigate to ${PROJECT_FULL_NAME} installation directory</description>
        </alias>
    </linuxAliases>

    <!-- ========================================= -->
    <!-- SHORTCUT CREATION OPTIONS                 -->
    <!-- ========================================= -->

    <!-- Create desktop shortcuts by default? -->
    <CREATE_DESKTOP_SHORTCUTS>1</CREATE_DESKTOP_SHORTCUTS>

    <!-- Create Start Menu shortcuts by default? (Windows) -->
    <CREATE_START_MENU_SHORTCUTS>1</CREATE_START_MENU_SHORTCUTS>

    <!-- Install Linux aliases by default? -->
    <INSTALL_LINUX_ALIASES>1</INSTALL_LINUX_ALIASES>

    <!-- Linux alias file location -->
    <LINUX_ALIAS_FILE>~/.bash_aliases</LINUX_ALIAS_FILE>

</shortcuts>
